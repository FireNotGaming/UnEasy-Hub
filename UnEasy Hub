local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()

local Window = Library.CreateLib("UnEasy Hub", "BloodTheme")

-- Make UI draggable
task.wait(1)
for _, gui in pairs(game:GetService("CoreGui"):GetChildren()) do
    if gui:FindFirstChild("Main") then
        local main = gui:FindFirstChild("Main")
        if main:IsA("Frame") then
            main.Active = true
            main.Draggable = true
            print("UI is now draggable")
        end
    end
end
tab

local Tab = Window:NewTab("Main")

local Section = Tab:NewSection("Bonds")

Section:NewButton("ButtonText", "ButtonInfo", function()
    -- https://scriptblox.com/script/Dead-Rails-Alpha-Dead-rails-Auto-bonds-39214

    getgenv().BondFarmSetting = {
		tweenDuration = 20,
		AutoExecute = true,
		CheckMissedBonds = true -- doesn't really work
	}

    loadstring(game:HttpGet('https://raw.githubusercontent.com/DonjoScripts/Public-Scripts/refs/heads/Slap-Battles/TheFastestBondStealer.lua'))()
end)
